<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach((document)=>{ %>
  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="deleteItem"
        value="<%=document._id %>"
        onChange="this.form.submit()"
      />
      <p><%= document.name %></p>
    </div>
    <input
      type="hidden"
      name="deleteList"
      value="<%= listTitle %>"
      onChange="this.form.submit()"
    />
  </form>
  <% }) %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button class="submit" type="submit" name="list" value="<%=listTitle%>">
      +
    </button>
  </form>
</div>

<%- include("footer") -%>
